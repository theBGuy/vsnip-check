{
  "name": "vsnip-check",
  "displayName": "vsnip-check",
  "description": "Syntax highlighting and error reporting for .nip pickit files",
  "version": "1.3.0",
  "author": "theBGuy <theBGuy.github@gmail.com>",
  "publisher": "theBGuy",
  "repository": "https://github.com/theBGuy/vsnip-check",
  "engines": {
    "vscode": "^1.85.5"
  },
  "categories": [
    "Programming Languages"
  ],
  "license": "MIT",
  "icon": "logo.png",
  "activationEvents": [
    "onDidOpenTextDocument",
    "onDidSaveTextDocument",
    "onDidChangeActiveTextEditor",
    "onDidOpenTextDocument",
    "onStartupFinished",
    "onDidCloseTextDocument",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./dist/diagnostics.js",
  "contributes": {
    "languages": [
      {
        "id": "nip",
        "aliases": [
          "Nip",
          "nip"
        ],
        "extensions": [
          ".nip"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nip",
        "scopeName": "source.nip",
        "path": "./syntaxes/nip.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "nip",
        "path": "./snippits/snippits.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && npm run lint && tsc -p .",
    "compile": "npm run check-types && npm run lint && tsc .",
    "watch": "tsc -watch -p .",
    "build": "vsce package",
    "check-types": "tsc --noEmit",
    "lint": "biome check --write .",
    "release": "release-it",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/node": "^20.11.13",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.26.1",
    "release-it": "^19.2.3",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  }
}
